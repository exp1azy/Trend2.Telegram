@model Trend2.TgApplication.ViewModels.VerificationViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Номер телефона";
}
<div class="ver_input_form">
    <form id="ver_form" action="PhoneNumberForm" method="post">
        <div class="tg_edit_form_title">
            <p class="edit_title">Введите номер телефона</p>
        </div>
        <div class="ver_form_input">
            <input id="tgInput" class="tg_input" name="phoneNumber" value="@Model.Number" placeholder="Номер" />
            @{
                if (Model.ErrorMessage != null)
                {
                    <p style="color: crimson">@Model.ErrorMessage</p>
                }
            }
        </div>
        <div class="ver_form_submit">
            <p>Id: @Model.Id</p>
            <button id="buttonRun" type="submit" class="button_run">Продолжить</button>
        </div>
    </form>
</div>